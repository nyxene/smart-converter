{
    "name": "smart-publisher",
    "version": "0.3.0",
    "author": "Evgeniy Kovrov <evgeniy@nyxene.com>",
    "license": "MIT",
    "homepage": "https://nyxene.github.io/smart-publisher/",
    "repository": {
        "type": "git",
        "url": "https://github.com/nyxene/smart-publisher.git"
    },
    "keywords": [
        "javascript",
        "typescript",
        "react",
        "nodejs"
    ],
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "start": "parcel serve ./src/index.html -d build --no-cache",
        "clean": "rimraf build/*",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit -w",
        "build": "cross-env NODE_ENV=production parcel build ./src/index.html --public-url ./ -d ./build --no-source-maps --no-cache",
        "test": "jest --watch",
        "test:ci": "cross-env jest --coverage",
        "lint": "eslint --quiet --ext .ts,.tsx ./src",
        "lint:ci": "cross-env yarn run lint -- --format ./node_modules/eslint-teamcity/index.js",
        "format": "prettier --write \"**/*.{ts,tsx}\"",
        "format:ci": "prettier --check \"/**/*.{ts,tsx}\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|tsx|json)": [
            "yarn run format",
            "git add"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "bunyan": "1.8.12",
        "cross-env": "7.0.2",
        "dotenv": "8.2.0",
        "nodemon": "2.0.2",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "restify": "8.5.1",
        "styled-components": "5.0.1",
        "typescript": "3.8.3",
        "typograf": "6.11.0"
    },
    "devDependencies": {
        "@types/jest": "25.2.1",
        "@types/node": "13.11.0",
        "@types/react": "16.9.32",
        "@types/react-dom": "16.9.6",
        "@types/styled-components": "5.0.1",
        "@typescript-eslint/eslint-plugin": "2.26.0",
        "@typescript-eslint/parser": "2.26.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-plugin-no-only-tests": "2.4.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "3.1.2",
        "eslint-plugin-react": "7.19.0",
        "husky": "4.2.3",
        "jest": "25.2.7",
        "lint-staged": "10.1.2",
        "parcel": "1.12.4",
        "prettier": "2.0.4",
        "rimraf": "3.0.2"
    }
}
